    {
        "id": "c1b644582cd174e1",
        "type": "function",
        "z": "3898444197398905",
        "name": "Prepare query for authentication_satus to sync",
        "func": "const payload = msg.payload;\nconst deviceId = payload.device_id;\nconst authentication_status = payload.authentication_status;\n\nconst dbPath = \"/etc/mosquitto/certs/update_database.db\";\nconst pragmaKey = env.get(\"DB_PASSWORD\");\n\n\n\n// UPSERT workaround:\nconst sqlUpsert = `\nPRAGMA key = '${pragmaKey}';\nUPDATE DeviceProfile\nSET authentication_status = '${authentication_status}' \nWHERE device_id = '${deviceId}';\n`;\nmsg.payload = `sqlcipher ${dbPath} <<< \"${sqlUpsert.trim()}\"`;\n\nreturn msg;\n",
