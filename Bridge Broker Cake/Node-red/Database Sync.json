    {
        "id": "4b78b333fabfa507",
        "type": "function",
        "z": "bb7e0f360c21e427",
        "name": "Prepare query for DeviceProfile Table to sync",
        "func": "// --- Step 1: Extract values from MQTT-in payload ---\nconst payload = msg.payload;\nconst deviceId = payload.device_id;\nconst deviceName = payload.device_name;\nconst macAddress1 = payload.mac_address_1 || \"00:00:00:00:00:00\";\nconst macAddress2 = payload.mac_address_2 || \"00:00:00:00:00:00\";\nconst isBroker = payload.is_broker || 0;\nconst authentication_status = payload.authentication_status;\nconst registrationTime = payload.registered_at || Math.floor(Date.now() / 1000);\n\n// --- Step 2: SQLCipher config ---\nconst dbPath = \"/etc/mosquitto/certs/update_database.db\";\nconst pragmaKey = env.get(\"DB_PASSWORD\");\n\n// --- Step 3: Get self device ID from global context ---\nconst selfDeviceID = global.get('deviceID', 'file');\n\n// --- Step 4: Prepare SQL query based on device ID match ---\nlet sqlQuery = \"\";\nif (deviceId === selfDeviceID) {\n    // Case 1: Device IDs match → INSERT only\n    sqlQuery = `\n    PRAGMA key = '${pragmaKey}';\n    INSERT INTO DeviceProfile (device_id, device_name, mac_address_1, mac_address_2, is_broker, authentication_status, registered_at) \n    VALUES ('${deviceId}', '${deviceName}', '${macAddress1}', '${macAddress2}', ${isBroker}, NULL, ${registrationTime});\n    `;\n} else {\n    // Case 2: Device IDs do not match → INSERT OR REPLACE\n    sqlQuery = `\n    PRAGMA key = '${pragmaKey}';\n    INSERT OR REPLACE INTO DeviceProfile (device_id, device_name, mac_address_1, mac_address_2, is_broker, authentication_status, registered_at) \n    VALUES ('${deviceId}', '${deviceName}', '${macAddress1}', '${macAddress2}', ${isBroker}, NULL, ${registrationTime});\n    `;\n}\n\n// --- Step 5: Set payload for exec ---\nmsg.payload = `sqlcipher ${dbPath} <<< \"${sqlQuery.trim()}\"`;\n\nreturn msg;\n",
