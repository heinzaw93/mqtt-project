    {
        "id": "789a8244b544a0d3",
        "type": "function",
        "z": "bb7e0f360c21e427",
        "name": "Prepare query for Keys Table to sync",
        "func": "const fs = global.get(\"fs\");\n\nconst payload = msg.payload;\nconst deviceId = payload.device_id;\nconst publicKey = payload.public_key;\nconst devicename = payload.devicename;\n\nconst dbPath = \"/etc/mosquitto/certs/update_database.db\";\nconst pragmaKey = env.get(\"DB_PASSWORD\");\n\nconst publicKeyEscaped = publicKey.replace(/'/g, \"''\");\n\n// --- Extra: if this is Sunny, write the key to file ---\nif (devicename && devicename.toLowerCase() === \"sunny\") {\n    try {\n        const sunnyPath = \"/etc/mosquitto/certs/sunny-public-key.pem\";\n        fs.writeFileSync(sunnyPath, publicKey, \"utf8\");\n        node.warn(`✅ Sunny public key written to ${sunnyPath}`);\n    } catch (err) {\n        node.error(`❌ Failed to write Sunny public key: ${err.message}`);\n    }\n}\n\n// --- UPSERT query ---\nconst sqlUpsert = `\nPRAGMA key = '${pragmaKey}';\nUPDATE Keys\nSET public_key = '${publicKeyEscaped}'\nWHERE device_id = '${deviceId}';\n\nINSERT INTO Keys (device_id, public_key)\nSELECT '${deviceId}', '${publicKeyEscaped}'\nWHERE NOT EXISTS (\n    SELECT 1 FROM Keys WHERE device_id = '${deviceId}'\n);\n`;\n\nmsg.payload = `sqlcipher ${dbPath} <<< \"${sqlUpsert.trim()}\"`;\n\nreturn msg;\n",
